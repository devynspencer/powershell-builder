<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <packageSources>
    <clear />
<%
  if ($PLASTER_PARAM_PackageRegistry -eq 'GitHub') {
    @'
    <add
      key="github"
      value="https://nuget.pkg.github.com/%GITHUB_USERNAME%/index.json"
      />
'@
}
%>
    <add
      key="<%= $PLASTER_PARAM_PublicPackageSourceName %>"
      value="<%= $PLASTER_PARAM_PublicPackageSourceUri %>"
      />
    <add
      key="staging"
      value="<%= $PLASTER_PARAM_StagingPackageSourcePath %>"
      />
  </packageSources>
<%
  if ($PLASTER_PARAM_PackageRegistry -eq 'GitHub') {
    @'
  <packageSourceCredentials>
    <github>
      <add
        key="Username"
        value="%GITHUB_USERNAME%"
        />
      <add
        key="ClearTextPassword"
        value="%GITHUB_PACKAGES_TOKEN%"
        />
    </github>
  </packageSourceCredentials>
'@
  }
%>
</configuration>
